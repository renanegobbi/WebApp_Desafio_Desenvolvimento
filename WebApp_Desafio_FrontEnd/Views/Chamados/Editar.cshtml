@model WebApp_Desafio_FrontEnd.ViewModels.ChamadoViewModel
@using Newtonsoft.Json
@using WebApp_Desafio_FrontEnd.ViewModels
@using WebApp_Desafio_FrontEnd.Helpers

<div class="row wrapper border-bottom white-bg page-heading header-title">
    <div class="col-sm-12 col-md-6 text-left align-self-center order-md-0 order-12">
        <h2>Editar Chamado</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <form id="form" asp-controller="Chamados" asp-action="Cadastrar" class="wizard-big" enctype="multipart/form-data" role="form" onsubmit="return false;">
            <input type="hidden" asp-for="ID" />

            <div class="row">
                <div class="form-group col-lg-7 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="Assunto"></label> @CustomHtmlHelper.IconeCampoObrigatorio("Assunto")
                    <input type="text" class="form-control" asp-for="Assunto">
                    <span class="text-danger" asp-validation-for="Assunto"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-7 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="Solicitante"></label> @CustomHtmlHelper.IconeCampoObrigatorio("Solicitante")
                    <select id="Solicitante" class="form-control" data-solicitante="@Model.Solicitante"></select>
                    <span class="text-danger" asp-validation-for="Solicitante"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-5 col-md-4 col-sm-8">
                    <label class="form-label" asp-for="Departamento"></label>
                    <select data-placeholder="Selecionar" class="form-control chosen-select" asp-for="IdDepartamento" id="Departamento">
                        <option value=""></option>
                        @foreach (var item in ViewData["ListaDepartamentos"] as List<DepartamentoViewModel>)
                        {
                            <option value="@item.ID" selected="@(item.ID == Model.IdDepartamento)">
                                @item.Descricao
                            </option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="Departamento"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-7 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="DataAbertura"></label>
                    <div class="input-group date" data-provide="datepicker">
                        <input type="text" class="form-control" asp-for="DataAbertura" asp-format="{0:dd/MM/yyyy}" />
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="DataAbertura"></span>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="panel-body">
    <fieldset>
        <div class="row">
            <div class="form-group col-sm-12 text-right float-right mb-0">
                <button type="button" id="btnCancelar" class="btn btn-outline btn-default">Cancelar</button>
                <button type="button" id="btnSalvar" class="btn btn-outline btn-primary">Salvar Alterações</button>
            </div>
        </div>
    </fieldset>
</div>

@section styles {
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section scripts {

    <!-- Select2 -->
    <script src="~/lib/select2/js/i18n/pt-BR.js"></script>

    <script>
        // // 👇 Passando os dados do Model do backend para o JS
        // const chamadoModel = {
        //     id: @Model.ID,
        //     assunto: '@Model.Assunto'.replace(/'/g, "\\'"),
        //     solicitante: '@Model.Solicitante'.replace(/'/g, "\\'"),
        //     idDepartamento: @Model.IdDepartamento,
        //     departamento: '@Model.Departamento'.replace(/'/g, "\\'"),
        //     dataAbertura: '@Model.DataAbertura.ToString("dd/MM/yyyy")'
        // };

        const chamadoModel = @Html.Raw(JsonConvert.SerializeObject(new
            {
                id = Model.ID,
                assunto = Model.Assunto ?? "",
                solicitante = Model.Solicitante ?? "",
                idDepartamento = Model.IdDepartamento,
                departamento = Model.Departamento ?? "",
                dataAbertura = Model.DataAbertura.ToString("dd/MM/yyyy")
            }));
    </script>

    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.pt-br.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

